<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<?import elements.Alphabet72TextArea?>
<GridPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SubstitutionController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Alphabet72TextArea fx:id="SUBSTITUTION_ORIGINAL" prefHeight="200.0" prefWidth="200.0" promptText="Original text..." wrapText="true">
                    <GridPane.margin>
                        <Insets left="14.0" right="14.0" top="14.0" />
                    </GridPane.margin>
                    <font>
                        <Font size="16.0" />
                    </font>
                </Alphabet72TextArea>
                <Alphabet72TextArea fx:id="SUBSTITUTION_CIPHER" prefHeight="200.0" prefWidth="200.0" promptText="Ciphertext..." GridPane.columnIndex="1" wrapText="true">
                    <GridPane.margin>
                        <Insets left="14.0" right="14.0" top="14.0" />
                    </GridPane.margin>
                    <font>
                        <Font size="16.0" />
                    </font>
                </Alphabet72TextArea>
            </children>
        </GridPane>
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="SUBSTITUTION_KEY" prefHeight="35.0" prefWidth="564.0" promptText="Key...">
                    <GridPane.margin>
                        <Insets left="14.0" right="14.0" />
                    </GridPane.margin>
                    <font>
                        <Font size="16.0" />
                    </font>
                </TextField>
            </children>
        </GridPane>
    </children>
</GridPane>